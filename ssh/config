ControlMaster auto
ControlPath ~/.ssh/mux/ssh_mux_%h_%p_%r
ControlPersist 8h

ForwardAgent no

#################
# Home machines #
#################
Host home
    Hostname home.degeberg.com
    User daniel
    ForwardAgent yes

Host laptop
    User daniel
    Hostname 10.42.3.6
    ForwardAgent yes

Host desktop
    User daniel
    Hostname 10.42.3.1
    ForwardX11 yes

