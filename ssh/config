# Jobindex #
############

# Basic settings
Host *.jobsafari.dk
    IdentityFile ~/.ssh/id_rsa-jix
    ForwardX11 yes
    ForwardX11Trusted yes
    ForwardAgent yes

# Direct/public access
Host gnu batch
    Hostname %h.jobsafari.dk
    User jobxx

Host gnu
    User dhe

# Jump host access
Host syslog.jix
    Hostname 192.168.0.37

Host weba.jix
    User jobxx
    Hostname 192.168.0.71

Host webb.jix
    User jobxx
    Hostname 192.168.0.72

Host proxya.jix
    Hostname 192.168.0.105

Host proxyb.jix
    Hostname 192.168.0.105

Host *.jix
    User root
    ProxyJump batch
