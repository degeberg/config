-- vim: syn=haskell

Config { font    = "xft:Montecarlo:size=9:normal:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run DynNetwork ["-L","0","-H","1048576","--normal","green","--high","red"] 15
                    , Run MultiCpu ["-t","CPU: <total0>%/<total1>%/<total2>%/<total3>%","-L","3","-H","50","--normal","green","--high","red"] 15
                    , Run Memory ["-t","Mem: <usedratio>%"] 20
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    , Run Com "pulsevol" ["volume-xmobar"] "vol" 5
                    , Run Com "keymap" ["current"] "keymap" 5
                    , Run Com "xmobar-service-status" [] "service" 50
                    , Run BatteryP ["BAT0"] ["-t","Bat: <left>%/<timeleft>","-L","30","-H","50","-l","red","-n","orange","-h","green"] 20
                    , Run ThermalZone 0 ["-L","40","-H","60","-l","lightblue","-h","red","-t","Temp: <temp>C"] 20
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%}{ %service% | %battery% | %multicpu% | %memory% | %thermal0% | %dynnetwork% | %vol% | %keymap% | <fc=#ee9a00>%date%</fc>"
       }

